import java.util.Scanner;

public class ElectricityUsage {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int[] units = new int[12];
        int total = 0;

        System.out.println("Enter electricity units for each of the 12 months:");
        for (int i = 0; i < 12; i++) {
            System.out.print("Month " + (i + 1) + ": ");
            units[i] = scanner.nextInt();
            total += units[i];
        }

        double average = total / 12.0;

        System.out.println("\nTotal units used in 12 months: " + total);
        System.out.printf("Average monthly usage: %.2f units\n", average);

        if (average > 500) {
            System.out.println("Warning: High Consumption Alert!");
        }
    }
}

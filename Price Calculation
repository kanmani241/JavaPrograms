import java.util.Scanner;

public class CinemaTicket {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        final double BASE_PRICE = 200.0;
        double finalPrice = BASE_PRICE;

   
        System.out.print("Enter your age: ");
        int age = scanner.nextInt();
        scanner.nextLine(); // consume leftover newline
        System.out.print("Enter the day of booking (Mon, Tue, Wed, Thu, Fri, Sat, Sun): ");
        String day = scanner.nextLine().trim();

        if (age < 5) {
            finalPrice = 0;
        } else if (age >= 5 && age <= 18) {
            finalPrice = BASE_PRICE * 0.6; // 40% discount
        } else if (age > 60) {
            finalPrice = BASE_PRICE * 0.7; // 30% discount
        }

     
        if (day.equalsIgnoreCase("Mon") || day.equalsIgnoreCase("Tue") ||
            day.equalsIgnoreCase("Wed") || day.equalsIgnoreCase("Thu") ||
            day.equalsIgnoreCase("Fri")) {
            finalPrice *= 0.9; // Additional 10% discount
        }

        System.out.printf("Final ticket price: â‚¹%.2f\n", finalPrice);
    }
}

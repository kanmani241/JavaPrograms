import java.util.*;

public class PasswordGenerator {
    public static void main(String[] args) {
        char[] small = "abcdefghijklmnopqrstuvwxyz".toCharArray();
        char[] capital = "ABCDEFGHIJKLMNOPQRSTUVWXYZ".toCharArray();
        char[] numbers = "0123456789".toCharArray();

        Scanner sc = new Scanner(System.in);
        System.out.print("Enter password length: ");
        int len = sc.nextInt();

        if (len < 3) {
            System.out.println("Length must be at least 3");
            return;
        }

        List<Character> pwd = new ArrayList<>();
        Random r = new Random();

        pwd.add(small[r.nextInt(small.length)]);
        pwd.add(capital[r.nextInt(capital.length)]);
        pwd.add(numbers[r.nextInt(numbers.length)]);

        for (int i = 3; i < len; i++) {
            int type = r.nextInt(3);
            pwd.add(type == 0 ? small[r.nextInt(small.length)] :
                    type == 1 ? capital[r.nextInt(capital.length)] :
                    numbers[r.nextInt(numbers.length)]);
        }

        Collections.shuffle(pwd);
        System.out.print("The Generated Password is: ");
        for (char c : pwd) System.out.print(c);
    }
}
